<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:background="@color/white"
        android:id="@+id/main_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/tv_in_room"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_gravity="bottom|right"
        android:background="#8000"
        android:text="进入聊天室"
        android:textColor="#FFF"
        android:layout_width="90dp"
        android:layout_height="30dp" />


    <TextView
        android:id="@+id/tv_book_tick"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="bottom|right"
        android:background="#8000"
        android:text="预订中心"
        android:textColor="#FFF"
        android:layout_width="90dp"
        android:layout_height="30dp" />

        <LinearLayout
            android:background="#8000"
            android:padding="10dp"
            android:layout_marginBottom="120dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_account_phone_number"
                android:text="17051052812"
                android:hint="phoneNumber"
                style="@style/user_info_input" />

            <EditText
                android:id="@+id/et_account_user_id"
                android:text="179792"
                android:hint="userId"
                style="@style/user_info_input"/>

            <EditText
                android:id="@+id/et_account_key_code"
                android:hint="keyCode"
                android:text="b20740c94e131278c952dfc62f40a158"
                style="@style/user_info_input" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_test_account"
                    android:text="Test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_account_save"
                    android:text="保存"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


</FrameLayout>
